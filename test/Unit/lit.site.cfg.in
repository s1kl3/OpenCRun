
config.proj_obj_root = "@PROJ_BINARY_DIR@"

config.llvm_tools_dir = "@LLVM_TOOLS_DIR@"
config.llvm_obj_root = "@LLVM_BINARY_DIR@"
config.llvmgcc_dir = "@LLVMGCCDIR@"
config.llvm_build_mode = "@LLVM_BUILD_MODE@"

config.llvmdir = "@LLVM_DIR@"
config.libdir = "@PROJ_LIB_DIR@"
config.incdir = "@PROJ_INC_DIR@"

config.enable_shared = @ENABLE_SHARED@
config.shlibdir = "@SHLIBDIR@"
config.shlibpath_var = "@SHLIBPATH_VAR@"

# Support substitution of the tools_dir and build_mode with user parameters.
# This is used when we can't determine the tool dir at configuration time.
try:
    config.llvm_tools_dir = config.llvm_tools_dir % lit.params
    config.llvm_build_mode = config.llvm_build_mode % lit.params
except KeyError,e:
    key, = e.args
    lit.fatal("unable to find %r parameter, use '--param=%s=VALUE'" % (key,key))

# Let the main config do the real work.
lit.load_config(config, "@PROJ_SOURCE_DIR@/test/Unit/lit.cfg")
